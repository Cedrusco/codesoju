<?xml version='1.0' encoding='utf-8'?>
<widget id="com.cedrus.sojuApp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SojuSample</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-universal-links-plugin" spec="~1.2.1" />
    <universal-links>
        <host name="sojuApp.com">
            <path event="startApp" url="*" />
        </host>
    </universal-links>
    <plugin name="cordova-plugin-x-socialsharing" spec="~5.1.3" />
    <plugin name="cordova-plugin-geolocation" spec="~2.4.0">
        <variable name="GEOLOCATION_USAGE_DESCRIPTION" value="We need to determine your location" />
    </plugin>
    <plugin name="phonegap-plugin-barcodescanner" spec="~6.0.3">
        <variable name="CAMERA_USAGE_DESCRIPTION" value=" " />
    </plugin>
    <plugin name="cordova-plugin-camera" spec="~2.3.0">
        <variable name="PHOTOLIBRARYUSAGEDESCRIPTIONENTRY" value="photo library usage" />
        <variable name="CAMERA_USAGE_DESCRIPTION" value="We need to access your camera" />
        <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value=" " />
    </plugin>
    <plugin name="cordova-plugin-inappbrowser" spec="~1.5.0" />
    <feature name="InAppBrowser">
      <param name="ios-package" value="CDVInAppBrowser" />
      <param name="android-package" value="org.apache.cordova.inappbrowser.InAppBrowser" />
    </feature>
</widget>
